<h2>Endereço</h2>

<%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <div>
    <%= f.label :street, "Rua" %>
    <%= f.text_field :street, value: @address.street %>
  </div>

  <div>
    <%= f.label :number, "Número" %>
    <%= f.text_field :number %>
  </div>

  <div>
    <%= f.label :neighborhood, "Bairro" %>
    <%= f.text_field :neighborhood %>
  </div>

  <div>
    <%= f.label :city, "Cidade" %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state, "Estado" %>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zipcode, "CEP" %>
    <%= f.text_field :zipcode %>
  </div>

  <%= f.submit "Salvar endereço" %>
<% end %>
