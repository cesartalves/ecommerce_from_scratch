<h1>Products</h1>

<%= link_to "New Product", new_admin_product_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description.truncate(60) %></td>
        <td>
          <% if product.image.attached? %>
            <%= image_tag product.image, width: 80 %>
          <% end %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to "Edit", edit_admin_product_path(product) %> |
          <%= link_to "Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>