<h1>Editar Produto</h1>

<%= form_with(model: [:admin, @product], local: true) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "erro") %> impediram que o produto fosse salvo:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Descrição" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, "Preço" %><br>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :image, "Imagem" %><br>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit "Atualizar Produto", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Voltar", admin_products_path %>
