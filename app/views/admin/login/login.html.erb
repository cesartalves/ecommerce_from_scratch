<h2>Admin Login</h2>

<%= form_with url: admin_login_path, scope: :user, method: :post do |f| %>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>

<% end %>